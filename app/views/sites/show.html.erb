<!-- #評論區 -->
<section class='grid min-w-full grid-cols-2 gap-4 px-4 my-5'>
  <div class='p-4 bg-white border'>
    <div>
      <h2 class='py-3 text-2xl font-bold'>評等</h2>
      <hr class='h-px my-8 bg-gray-200'>
    </div>
    <div>
      <h3 class='text-lg '>評等</h3>
      <div class='flex justify-between'>
        <h4 class='text-base '>交通便利性</h4>
        <span>OOOOO</span>
      </div>
    </div>
  </div>
  <div class='p-4 bg-white border'>
    <div>
      <h2 class='py-3 text-2xl font-bold'>評論</h2>
      <hr class='h-px my-8 bg-gray-200'>
    </div>
    <div>
      <h3 class='text-lg '>評論</h3>
      <div class='flex justify-between'>
        <h4 class='text-base '>景點類型</h4>
        <span>OOOOO</span>
      </div>
    </div>
  </div>
</section>

 <section class='flex justify-center px-5'>
  <div class='w-2/3 px-3 site-container'>
    <p>Site Pic</p>
    <img class='w-full' src='https://fakeimg.pl/400x200/?text=Hello' alt='site_image'>
  </div>
  <div class='w-1/3 px-3 map-container'>
    <p>Google Map</p>
    <img class='w-full' src='https://fakeimg.pl/400x300/?text=Hello' alt='Google Map'>
  </div>
</section>

<div class='m-auto border-2 border-black md:w-90%'>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>詳細資料</h2>
    <h3 class='text-lg'>停留時間</h3>
    <p>
      <%=@site.stay_duration%>
    </p>
    <h3 class='mt-3 text-lg'>簡介</h3>
    <p>
      <%=@site.intro%>
    </p>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>位置和聯絡方式</h2>
    <h3 class='text-lg '>地址</h3>
    <p>
      <%=@site.address%>
    </p>
    <h3 class='text-lg'>電話</h3>
      <%=@site.tel%>
  </div>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>景點類型</h2>
    <% @site.site_types.each do |site_type| %>
      <span class='inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full '>
        <%=site_type%>
      </span>
      <% end %>
  </div>

  <%= link_to '編輯景點資訊' , sites_path(@site), class:'mt-2 rounded-lg py-3 px-5 bg-blue-300 inline-block
    font-medium'%>
    <%= link_to '返回景點列表' , sites_path, class:'ml-2 rounded-lg py-3 px-5 bg-blue-300 inline-block font-medium' %>
</div>
</div>




     