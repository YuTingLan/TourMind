<div class='flex items-center justify-between'>
  <h1 class='text-4xl font-bold'>景點</h1>
  <%= link_to '新增景點' , new_site_path, class:'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium' %>
</div>

<div class='flash'>
  <%= flash[:notice] %>
</div>

<form class='flex justify-center'>
  <input type='text' name='keyword' value='<%= params[:keyword]%>' placeholder='請輸入關鍵字....' class='w-full max-w-xl input input-bordered input-primary'>
  <input type='submit' class='btn-add' value='查詢'>
</form>

<section class='container px-2 py-2'>
  <section class='grid grid-cols-4'>
    <% @sites.each do |site| %>
      <section class='border-2 border-black grid-row-3'>
        <div>
          <img src='https://fakeimg.pl/350x200/?text=Hello' class='h-full'>
        </div>
        <div class='mx-10 h-90'>
          <h2>名稱:<%= link_to site.name , site_path(site.id) %>
          </h2>
          <p>景點網站:<%= link_to site.name , site.website %>
          </p>
          <p>地址:<%= site.address %>
          </p>
          <p>緯度:<%= site.latitude %>
          </p>
          <p>經度:<%= site.longitude %>
          </p>
          <p>簡介:<%= site.intro&.truncate(30)%>
          </p>
        </div>
        <div class='mx-10 h-90'>
          <h2>景點類型</h2>
          <% site.site_types.each do |equipment| %>
            <span
              class='inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full '>
              <%=equipment%>
            </span>
            <% end %>
        </div>
         <button class='btn-form'>
            <%= link_to '編輯' , edit_site_path(site.id) %>
          </button>
          <button class='btn-form'>
            <%= link_to '刪除' , site_path(site.id),method:'delete',data:{confirm:'確定刪除嗎？'} %>
          </button>
      </section>
    <% end %>
  </section>
</section>
