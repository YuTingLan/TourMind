<h1 class="heading-1">Sites Edit</h1>

<%= form_for(@site) do |f| %>
 
        <div class='field'>
            <%= f.label :name,'景點名稱:' %>
                <%= f.text_field :name %>
        </div>

        <div class='field'>
            <%= f.label :website,'網站:'%>
                <%= f.text_field :website %>
        </div>

         <div class='field'>
            <%= f.label :address, '地址:' %>
                <%= f.text_field :address %>
        </div>

        <div class='field'>
            <%= f.label :latitude, '緯度:' %>
                <%= f.text_field :latitude %>
        </div>

        <div class='field'>
            <%= f.label :longitude, '經度:' %>
                <%= f.text_field :longitude %>
        </div>
        
           <div class='field'>
            <%= f.label :stay_duration, '停留時間:' %>
                <%= f.text_field :stay_duration %>
        </div>

        <div class='field'>
            <%= f.label :intro, '簡介:' %>
                <%= f.text_area :intro %>
        </div>

        <div class='field'>
            <%= f.label :pet_freindly, '攜帶寵物:' %>
                <%= f.text_field :pet_freindly %>
        </div>

        <%= f.submit class:"px-3 bg-blue-300 rounded-full" %>
  <% end %>

  <button class="btn-add">
      <%= link_to '回到景點列表' , sites_path %>
    </button>