<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">餐廳</h1>
    <%= link_to '新增餐廳', new_restaurant_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="restaurants" class="min-w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 flex">
    <%= render @restaurants %>
  </div>
</div>
