<!-- #評等＆評論區 -->
<section class='grid min-w-full grid-cols-2 gap-4 px-4 my-5'>
  <div class='p-4 bg-white border'>
    <div>
      <h2 class='py-3 text-2xl font-bold'>評等</h2>
      <hr class='h-px my-8 bg-gray-200'>
    </div>
    <div>
      <h3 class='text-lg '>評等</h3>
      <div class='flex justify-between'>
        <h4 class='text-base '>XX</h4>
        <span>OOOOO</span>
      </div>
      <div class='flex justify-between'>
        <h4 class='text-base '>XX</h4>
        <span>OOOOO</span>
      </div>
    </div>
  </div>
  <div class='p-4 bg-white border'>
    <div>
      <h2 class='py-3 text-2xl font-bold'>評論</h2>
      <hr class='h-px my-8 bg-gray-200'>
    </div>
    <div>
      <h3 class='text-lg '>評論</h3>
      <div class='flex justify-between'>
        <h4 class='text-base '>XX</h4>
        <span>OOOOO</span>
      </div>
      <div class='flex justify-between'>
        <h4 class='text-base '>XX</h4>
        <span>OOOOO</span>
      </div>
    </div>
  </div>
</section>

<Section class='p-3'>
  <h1 class='heading-1'>
    <%= link_to @hotel.name, @hotel.website %>
  </h1>
  <div class='flex'>
    <span class='mr-2'>OOOOO(評分)</span>
    <span class='mr-2'>XX則評論(comment)</span>
  </div>
</Section>
<!-- #圖片區 -->
<section class='flex justify-center px-5'>
  <div class='w-2/3 px-3 hotel-container'>
    <p>Hotel Pic</p>
    <img class='w-full' src='https://fakeimg.pl/400x200/?text=Hello' alt='hotel_image'>
  </div>
  <div class='w-1/3 px-3 map-container'>
    <p>Google Map</p>
    <img class='w-full' src='https://fakeimg.pl/400x300/?text=Hello' alt='Google Map'>
  </div>
</section>
<!-- #資料區 -->
<div class='m-auto border-2 border-black md:w-90%'>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>詳細資料</h2>
    <h3 class='text-lg'>星級數</h3>
    <p>
      <%=@hotel.star_rating%>
    </p>
    <h3 class='mt-3 text-lg'>簡介</h3>
    <p>
      <%=@hotel.intro%>
    </p>
    <h3 class='text-lg '>飯店類型</h3>
    <p>
      <%=@hotel.hotel_type%>
    </p>
  </div>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>位置和聯絡方式</h2>
    <h3 class='text-lg '>地址</h3>
    <p>
      <%=@hotel.address%>
    </p>
    <h3 class='text-lg'>電話</h3>
    <p>
      <%=@hotel.tel%>
    </p>
  </div>
  <div class='p-4 bg-white border'>
    <h2 class='py-3 text-2xl font-bold'>飯店設備</h2>
    <% @hotel.equipment_types.each do |equipment| %>
      <span class='inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full '>
        <%=equipment%>
      </span>
      <% end %>
  </div>

  <%= link_to '編輯飯店資訊' , edit_hotel_path(@hotel), class:'mt-2 rounded-lg py-3 px-5 bg-blue-300 inline-block
    font-medium'%>
    <%= link_to '返回飯店列表' , hotels_path, class:'ml-2 rounded-lg py-3 px-5 bg-blue-300 inline-block font-medium' %>
</div>
</div>