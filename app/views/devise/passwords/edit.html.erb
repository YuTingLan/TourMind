<section class="flex items-center justify-center w-full h-screen">
  <div class="relative flex items-center justify-center bg-white rounded-lg shadow-lg form-box w-400 h-450 shadow-gary-500/50">
    <%= link_to image_tag("close", class: "absolute right-0 top-0 m-2 h-5 w-5"), root_path %>
    <div class="form-value">
        <div class="m-8 field ">
          <%= image_tag("logo", class: "w-10 h-10 mb-2") %>
          <span class="my-8 text-xl font-bold text-center">
            <span class="text-red-600 tracking-zero">修改</span>
            您在
            <span class=" text-amber-500 tracking-zero">Tour</span>
            <span class=" text-sky-500 tracking-zero">Mind</span>
            的會員密碼
          </span>
        </div>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="relative m-2 field">
            <%= image_tag "password.png", class: "h-10 w-10 inline-block absolute right-0 z-2" %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入密碼...(最少6個字)", class: "rounded-lg text-black w-full" %>
          </div>
          <div class="relative m-2 field">
            <%= image_tag "password.png", class: "h-10 w-10 inline-block absolute right-0 z-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再次確認密碼...", class: "rounded-lg text-black w-full" %>
          </div>
          <div class="m-2 actions field">
            <%= f.submit "確定修改密碼", class: "btn-square btn-green " %>
          </div>
        <% end %>
    </div>
  </div>
</section>